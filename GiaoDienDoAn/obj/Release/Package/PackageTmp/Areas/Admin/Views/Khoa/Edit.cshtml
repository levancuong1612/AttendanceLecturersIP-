@model CSDL.EF.TBL_Khoa
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}



@using (Html.BeginForm("Edit", "Khoa", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chỉnh Sửa Khoa: @Model.TenKhoa</h4>
        <hr />
        <div class="form-group">
           
        </div>
        <div class="form-group">
            <label>Tên Khoa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Phòng</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaPhong, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-default" style="background-color:#0094ff" />
            </div>
        </div>
    </div>
}
