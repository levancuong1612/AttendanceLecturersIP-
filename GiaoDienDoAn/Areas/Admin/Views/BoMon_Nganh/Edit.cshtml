
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model CSDL.EF.TBL_MonHoc
<h2>Chỉnh Sửa Môn Học</h2>
<div class="modal-content">

    @using (Html.BeginForm("Edit", "BoMon_Nganh", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <form action="#" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Môn Học</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Tên Môn</label>
                            @Html.EditorFor(model => model.TenMonHoc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenMonHoc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Số tín chỉ</label>
                            @Html.EditorFor(model => model.SoTinChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoTinChi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Loại</label>
                            @Html.DropDownListFor(model => model.Loai, new List<SelectListItem>
                                              {
                                                   new SelectListItem{Text="- Chọn Loại-",Selected=true},
                                                   new SelectListItem{Text="Lý Thuyết",},
                                                   new SelectListItem{Text="Thực Hành",},
                                                }, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Chuyên Ngành</label>
                            @Html.DropDownListFor(model => model.MaChuyenNganh, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaChuyenNganh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Cập Nhật" class="btn btn-default" />
            </div>
        </form>
    }
</div>
